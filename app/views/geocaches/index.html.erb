<%- model_class = Geocach -%>
<div class="page-header">
  <h1>Your GeoCaches</h1>
</div>

<div class="block-sm block">
	
	
<%= link_to t('.new', :default => t("helpers.links.create")),
            new_geocach_path,
            :class => 'btn btn-primary btn-flat-small' %>

<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:cache_name) %></th>
      <th><%= model_class.human_attribute_name(:hide) %></th>
      <th><%= model_class.human_attribute_name(:found) %></th>
      <th>Hid:</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @geocaches.each do |geocach| %>
      <tr>
        <td><%= link_to geocach.id, geocach_path(geocach) %></td>
        <td><%= geocach.cache_name %></td>
        <td><%= geocach.hide %></td>
        <td><%= geocach.found %></td>

			  
        <td><%= time_ago_in_words(geocach.created_at) %>  ago </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_geocach_path(geocach), :class => 'btn btn-primary btn-flat-medium ' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      geocach_path(geocach),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-flat-medium ' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

