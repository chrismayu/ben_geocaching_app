<%- model_class = Geocach -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:lat) %></th>
      <th><%= model_class.human_attribute_name(:lad) %></th>
      <th><%= model_class.human_attribute_name(:receive_email) %></th>
      <th><%= model_class.human_attribute_name(:cache_name) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:hide) %></th>
      <th><%= model_class.human_attribute_name(:found) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @geocaches.each do |geocach| %>
      <tr>
        <td><%= link_to geocach.id, geocach_path(geocach) %></td>
        <td><%= geocach.name %></td>
        <td><%= geocach.lat %></td>
        <td><%= geocach.lad %></td>
        <td><%= geocach.receive_email %></td>
        <td><%= geocach.cache_name %></td>
        <td><%= geocach.image %></td>
        <td><%= geocach.email %></td>
        <td><%= geocach.user_id %></td>
        <td><%= geocach.hide %></td>
        <td><%= geocach.found %></td>
        <td><%=l geocach.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_geocach_path(geocach), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      geocach_path(geocach),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_geocach_path,
            :class => 'btn btn-primary' %>
