<%- model_class = Geocach -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
 <%= debug(@qr_code) if Rails.env.development? %>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @geocach.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lat) %>:</strong></dt>
  <dd><%= @geocach.lat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lad) %>:</strong></dt>
  <dd><%= @geocach.lad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:receive_email) %>:</strong></dt>
  <dd><%= @geocach.receive_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cache_name) %>:</strong></dt>
  <dd><%= @geocach.cache_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= @geocach.image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @geocach.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @geocach.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hide) %>:</strong></dt>
  <dd><%= @geocach.hide %></dd>
  <dt><strong><%= model_class.human_attribute_name(:found) %>:</strong></dt>
  <dd><%= @geocach.found %></dd>

  <dt><strong>Random Code:</strong></dt>
  <dd><%= @geocach.random_code %></dd>
  <dt><strong>QR Code:</strong></dt>
  <dd><%= @geocach.qr_code %></dd>


 
</dl>
<style type="text/css">
table {
  border-width: 0;
  border-style: none;
  border-color: #0000ff;
  border-collapse: collapse;
}
td {
  border-width: 0; 
  border-style: none;
  border-color: #0000ff; 
  border-collapse: collapse; 
  padding: 0; 
  margin: 0; 
  width: 10px; 
  height: 10px; 
}
td.black { background-color: #000; }
td.white { background-color: #fff; }
</style>
<table>
<% @qr.modules.each_index do |x| %>
  <tr>  
  <% @qr.modules.each_index do |y| %>
   <% if @qr.dark?(x,y) %>
    <td class="black"/>
   <% else %>
    <td class="white"/>
   <% end %>
  <% end %>
  </tr>
<% end %>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              geocaches_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_geocach_path(@geocach), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              geocach_path(@geocach),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
